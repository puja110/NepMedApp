<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:id="@+id/allServicesCard"
    app:cardBackgroundColor="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:id="@+id/allServicesImage"
            android:src="@drawable/ic_action_baby_care"/>

        <TextView
            android:id="@+id/allServicesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="AC Service and Repair"
            android:textSize="@dimen/fourteen_textsize"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:paddingLeft="30dp"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/arrow"
            android:src="@drawable/ic_action_next"/>

    </LinearLayout>
</android.support.v7.widget.CardView>