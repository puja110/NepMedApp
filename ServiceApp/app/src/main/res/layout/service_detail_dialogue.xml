<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/colorWhite"
    android:background="@drawable/button_background">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="280dp"
        android:paddingTop="5dp"
        android:src="@drawable/ic_action_delete"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:src="@drawable/profile_image"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Lists"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_textsize"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="@dimen/eight"
            android:layout_toRightOf="@+id/image"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/name"
            android:background="#3ac18f"
            android:layout_margin="20dp"
            android:text="Hourly Cost: $100"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fourteen_textsize"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="825 U.S. 1,Hodgdon, ME, USA"
            android:layout_marginLeft="@dimen/eight"
            android:textSize="@dimen/fourteen_textsize"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/select_icon"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Details"
            android:textSize="@dimen/fourteen_textsize"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="#f9b35f"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="45dp"
            android:background="@color/colorWhite"/>

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Chat"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/fourteen_textsize"
            android:textColor="@color/colorWhite"
            android:background="#f9b35f"/>

    </LinearLayout>
</LinearLayout>